#!/bin/bash
# -*- mode: bash; tab-width: 2; -*-
# vim: ts=2 sw=2 ft=bash noet

# source the Nos framework
. /opt/nanobox/nos/common.sh

# initialize Nos with the original arguments
nos_init "$@"

# source common lib
. ${engine_lib_dir}/ruby.sh

# /data/lib/ruby/gems

# install ruby, jruby, or rubinius interpreters and bundler
install_runtime_packages

# Configure bundler to install into vendor folder
set_bundle_config

# Run the bundle install
bundle_install

# Clean old things out of the bundle
bundle_clean

# Add vendor/bundle/.bin to the PATH
persist_bundle_bin_to_path

# if nodejs is required, we have a bit more compiling to do
if [[ "$(is_nodejs_required)" = "true" ]]; then
  # add node_modules/.bin to the PATH
  persist_npm_bin_to_path

  # run npm rebuild only if the runtime has changed
  npm_rebuild

  # run npm install
  npm_install

  # run npm prune
  npm_prune

  # set the node.js runtime in cache
  nodejs_persist_runtime
fi

exit 0
